<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/two_line_item_height"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/indicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_navigation_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/titleView"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:gravity="bottom"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:text="Mobile Application Programming"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/indicator"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/codeView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:gravity="bottom"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:text="overline"
        app:layout_constraintTop_toBottomOf="@id/titleView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/indicator"
        />

</android.support.constraint.ConstraintLayout>